package pizzeriadiddieffe.core.pizza;

import pizzeriadiddieffe.core.pizza.Pizza;
import pizzeriadiddieffe.core.pizza.PizzaDecorator;

public class BufalaMozzarella extends PizzaDecorator {
	Pizza tempPizza;
	private final static double PRICE = 1;

	public BufalaMozzarella(Pizza myPizza){
		tempPizza = myPizza; 
		}

	@Override
	public String getInfo() {
		return tempPizza.getInfo() + ", Bufala mozzarella";
	}

	@Override
	public double getPrice() {
		return tempPizza.getPrice()+PRICE;
	}
}